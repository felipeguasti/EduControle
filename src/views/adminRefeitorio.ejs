<% if (!onlyContent) { %>
    <!DOCTYPE html>
    <html>
    <head>
        <title>Administração do Refeitório</title>
        <link rel="stylesheet" href="/css/admin.css">
        <link href="https://cdn.jsdelivr.net/npm/quill@2.0.0-rc.4/dist/quill.snow.css" rel="stylesheet">
    </head>
    <body>
        <header>
            <h1>Área Administrativa</h1>
            <h3>EEEFM Coronel Olímpio Cunha</h3>
            <a href="/" class="btn-voltar">← Voltar</a>       
            <nav>
                <ul>
                    <li><a id="linkAnuncios" class="active" href="#">Anúncios</a></li>
                    <li><a id="linkRefeitorio" href="#">Refeitório</a></li>
                <!-- Adicione outros links conforme necessário -->
                </ul>
            </nav>
        </header>
        <section>
            <div class="container-visualizar">
                <h2>Atualização das TV's do Refeitório</h2>
                <a href="/refeitorio" id="visualizar" class="button" target="_blank">Visualizar Painel</a>
            </div>
            <form id="informativoForm" action="/api/refeitorio" method="post" name="informativoForm" enctype="multipart/form-data">
                <label for="titulo">Título:</label>
                <input type="text" id="titulo" name="titulo" required>
                <label for="mensagem">Mensagem:</label>
                <div id="editor" informativo-mensagem="true">
                    <textarea id="mensagem" name="mensagem" style="display: none;" required></textarea>
                </div>
        
                <label for="imagemUrl">URL da Imagem:</label>
                <input type="text" id="imagemUrl" name="imagemUrl">
    
                <!-- Campo para upload de imagem, corrigindo o id -->
                <label for="imagemFile">Upload de Imagem:</label>
                <input type="file" id="imagemFile" name="imagemFile" accept="image/*" />
        
                <label for="videoUrl">URL do Vídeo:</label>
                <input type="text" id="videoUrl" name="videoUrl">
        
                <div class="checkbox-container">
                    <label for="videoComSom">Reproduzir vídeo com som:</label>
                    <input type="checkbox" id="videoComSom" name="videoComSom" />
                </div>
                </select>
        
                <label for="turno">Turno:</label>
                <select id="turno" name="turno" required>
                <option value="matutino">Matutino</option>
                <option value="vespertino">Vespertino</option>
                <option value="ambos">Ambos</option>
                </select>
        
                <label for="dataInicio">Data de Início do Anúncio:</label>
                <input type="date" id="dataInicio" name="dataInicio">
    
                <label for="dataFim">Data de Término do Anúncio:</label>
                <input type="date" id="dataFim" name="dataFim">
                <input type="hidden" id="dataPostagem" name="dataPostagem">
    
                <button type="submit" id="submitButton">Publicar Informativo</button>
            </form>
        </section>
        <section class="carregamento-container">
            <h2>Informativos Programados</h2>
            <p class="totalProgramados"></p>
            <div class="carousel">
                <div class="carousel-inner">
                    <div id="programadosList"></div>
                </div>
                <div class="carousel-controls">
                    <button id="recuarProgramados" class="prev carousel-control-button">Anterior</button>
                    <button id="avancarProgramados" class="next carousel-control-button">Próximo</button> 
                </div>
            </div>
            <h2>Informativos Publicados</h2>
            <p class="totalPublicados"></p>
            <div class="carousel">
                <div class="carousel-inner">
                    <div id="informativoList"></div>
                </div>
                <div class="carousel-controls">
                    <button id="recuarPublicados" class="prev carousel-control-button">Anterior</button>
                    <button id="avancarPublicados" class="next carousel-control-button">Próximo</button> 
                </div>                 
            </div>
        </section>
        <%- include('partials/footerRefeitorio') %>             
<% } else { %>
    <section>
        <div class="container-visualizar">
            <h2>Atualização das TV's do Refeitório</h2>
            <a href="/refeitorio" id="visualizar" class="button" target="_blank">Visualizar Painel</a>
        </div>
        <form id="informativoForm" action="/api/refeitorio" method="post" name="informativoForm" enctype="multipart/form-data">
            <label for="titulo">Título:</label>
            <input type="text" id="titulo" name="titulo" required>
            <label for="mensagem">Mensagem:</label>
            <div id="editor" informativo-mensagem="true">
                <textarea id="mensagem" name="mensagem" style="display: none;" required></textarea>
            </div>
    
            <label for="imagemUrl">URL da Imagem:</label>
            <input type="text" id="imagemUrl" name="imagemUrl">

            <!-- Campo para upload de imagem, corrigindo o id -->
            <label for="imagemFile">Upload de Imagem:</label>
            <input type="file" id="imagemFile" name="imagemFile" accept="image/*" />
    
            <label for="videoUrl">URL do Vídeo:</label>
            <input type="text" id="videoUrl" name="videoUrl">
    
            <div class="checkbox-container">
                <label for="videoComSom">Reproduzir vídeo com som:</label>
                <input type="checkbox" id="videoComSom" name="videoComSom" />
            </div>
            </select>
    
            <label for="turno">Turno:</label>
            <select id="turno" name="turno" required>
            <option value="matutino">Matutino</option>
            <option value="vespertino">Vespertino</option>
            <option value="ambos">Ambos</option>
            </select>
    
            <label for="dataInicio">Data de Início do Anúncio:</label>
            <input type="date" id="dataInicio" name="dataInicio">

            <label for="dataFim">Data de Término do Anúncio:</label>
            <input type="date" id="dataFim" name="dataFim">
            <input type="hidden" id="dataPostagem" name="dataPostagem">

            <button type="submit" id="submitButton">Publicar Informativo</button>
        </form>
    </section>
    <section class="carregamento-container">
        <h2>Informativos Programados</h2>
        <p class="totalProgramados"></p>
        <div class="carousel">
            <div class="carousel-inner">
                <div id="programadosList"></div>
            </div>
            <div class="carousel-controls">
                <button id="recuarProgramados" class="prev carousel-control-button">Anterior</button>
                <button id="avancarProgramados" class="next carousel-control-button">Próximo</button> 
            </div>
        </div>
        <h2>Informativos Publicados</h2>
        <p class="totalPublicados"></p>
        <div class="carousel">
            <div class="carousel-inner">
                <div id="informativoList"></div>
            </div>
            <div class="carousel-controls">
                <button id="recuarPublicados" class="prev carousel-control-button">Anterior</button>
                <button id="avancarPublicados" class="next carousel-control-button">Próximo</button> 
            </div>                 
        </div>
    </section>
<% } %>