<body>
    <header>
        <h1>Reserva de Equipamentos e Espaços</h1>
        <h3>EEEFM Coronel Olímpio Cunha</h3>
        <a href="/" class="btn-voltar">← Voltar</a>
    </header>
    <section>
        <form id="formReserva" method="post">
            <div id="recursoInfo"></div>
            <div id="recursoQuantidade"></div>
            <input  type="hidden" id="recurso" name="recurso" readonly>
            </select>

            <label for="data">Data:</label>
            <input type="date" id="data" name="data" required>

            <label for="turno">Turno:</label>
            <select id="turno" name="turno" required>
                <option value="Matutino">Matutino</option>
                <option value="Vespertino">Vespertino</option>
            </select>

            <label for="professor">Professor:</label>
            <input type="text" id="professor" name="professor" required>

            <label for="turma">Turma:</label>
            <select id="turma" name="turma" required>
                <!-- As opções serão preenchidas dinamicamente com JavaScript -->
            </select>
            
            <!-- Seção de Horários -->
            <label for="horarioSelecionado">Horários:</label>
            <div id="horariosDisponiveis">
                <!-- Horários disponíveis serão inseridos aqui -->
                <input type="hidden" id="horarioSelecionado" name="horario" value=""> <!-- Retorna o horário escolhido para o backend -->
                <input type="hidden" id="idReserva" name="idReserva">
            </div>
            <!-- Estrutura básica do Popup (pode ser colocada no seu arquivo HTML) -->
            <label for="observacoes">Observações:</label>
            <textarea id="observacoes" name="observacoes"></textarea>

            <button type="submit">Realizar Reserva</button>
        </form>
        <div id="popupProfessores" class="popup-container">
            <div class="popup-content">
                <span class="close" onclick="fecharPopupProfessores()">&times;</span>
                <h2>Selecione um professor:</h2>
                <div id="listaProfessores"></div>
            </div>
        </div> 
        </div>
        <div id="calendar-title">Reservas da Semana</div>
        <div id="calendarioSemanal">
            <table>
                <thead>
                    <tr id="cabecalhoCalendario">
                        <!-- Os cabeçalhos da tabela serão inseridos aqui dinamicamente -->
                    </tr>
                    </tr>
                </thead>
                <tbody id="corpoCalendario">
                    <!-- Os horários serão preenchidos aqui via JavaScript -->
                </tbody>
            </table>
        </div>        
    </section>
    <footer>
        <div class="container-footer">
